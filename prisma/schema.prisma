generator client {
  provider = "prisma-client-js"
  output   = "../apps/backend/node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum LearningStatus {
  PLANNED
  IN_PROGRESS
  DONE
}

enum LearningDifficulty {
  EASY
  MEDIUM
  HARD
}

model LearningEntry {
  id          String              @id @default(cuid())
  title       String
  description String?
  status      LearningStatus      @default(PLANNED)
  difficulty  LearningDifficulty?
  tags        String?
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
}
